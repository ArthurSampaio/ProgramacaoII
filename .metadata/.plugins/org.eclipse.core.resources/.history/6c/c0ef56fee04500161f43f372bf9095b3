package lab03.economizap2.leitor;
import java.util.Scanner;

/*
 * Classe Input,
 * Para ler dados e imprimir a mensagem de inteiros, real e strings
 * 
 * @author Arthur Sampaio
 * @version 1.0
 * 
 * 2016, Universidade Federal de Campina Grande
 * 
 */

public class Input {
	
	public static Scanner sc = new Scanner(System.in);
	
	/*
	 * Os m√©todos abaixo retornam respectivamente
	 * 
	 * @return int
	 * @return double
	 * @return String
	 */
	
	public static int inteiro(String mensagem){
		System.out.println(mensagem);
		int qualquer = sc.nextInt();
		sc.nextLine();
		return qualquer;
	}
	
	public static double real (String mensagem){
		System.out.println(mensagem);
		double qualquer = sc.nextDouble();
		sc.nextLine();
		return qualquer;
	}
	
	public static String string (String mensagem){
		System.out.println(mensagem);
		String qualquer = sc.next();
		sc.nextLine();
		return qualquer;
	}
	
	
}
